        cols: 3
        Label:
            text: "Латте"
        Label:
            id: latte_score
            #text: root.score#change
        Label:
            id: latte_price
            #text: root.price#change
        Label:
            text: "Капучино"
        Label:
            id: kapuchino_score
            #text: root.score#change
        Label:
            id: americano_price
            #text: root.price#change
        Label:
            text: "Американо"
        Label:
            id: kapuchino_score
